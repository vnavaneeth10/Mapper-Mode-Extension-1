{
  "manifest_version": 3,
  "name": "Controlled Queue Loader",
  "version": "1.7.0",
  "description": "Open URLs in a controlled queue, mark pages as done manually, and load the next task with clear visual status indicators.",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "mark-done": {
      "suggested_key": {
        "default": "Ctrl+Shift+W"
      },
      "description": "Mark current task as done"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}